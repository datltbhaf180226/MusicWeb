<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add music page</title>
</head>
<body>
    <form >
        <div>
            <label for="_id">ID</label>
            <input type="text" id="_id" name="_id" required/>
        </div>
        <div>
            <label for="song">Song</label>
            <input type="text" id="song" name="song" required/>
        </div>
        <div>
            <label for="img">Image</label>
            <input type="text" id="img" name="img" required/>
        </div>
        <div>
            <label for="genre">Genre</label>
            <input type="text" id="genre" name="genre" required/>
        </div>
        <div>
            <label for="singer">Singer</label>
            <input type="text" id="singer" name="singer" required/>
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="description" required/>
        </div>
        <button type="button" id="create">Add</button>
    </form>

    <!-- Import jquery, sweetalert -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
        integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
</body>
</html>


<script type="text/javascript">
    $(function () {
        $('input[type="text"]').change(function () {
            this.value = $.trim(this.value);
        });
    });
    $(function () {
        $('#create').click(function (e) {
            const id = $('input[name=_id]').val();
            const song = $('input[name=song]').val();
            const img = $('input[name=img]').val();
            const genre = $('input[name=genre]').val();
            const singer = $('input[name=singer]').val();
            const description = $('input[name=description]').val();
            const data = { _id:id, song: song, img: img, genre: genre, singer: singer, description: description };
            let change = true;
            if (change) {
                $.ajax({
                    type: 'POST',
                    data: data,
                    url: '/addMusic',
                    success: function (data) {
                        if (data == true) {
                            swal({
                                title: "Good job!",
                                text: "You clicked the button!",
                                icon: "success",
                                button: "Aww yiss!",
                            }).then(function () {
                                location.href = "/admin";
                            });

                        } else {
                            swal("Oh noes!", "The AJAX request failed!", "error");
                        }
                    },
                });
            }
        });
    });
</script>